        <dependency>
            <groupId>com.dan323</groupId>
            <artifactId>implementation.deduction.modal</artifactId>
            <version>${proof.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.dan323</groupId>
            <artifactId>framework.deduction</artifactId>
            <version>${proof.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.dan323</groupId>
            <artifactId>implementation.deduction.classic</artifactId>
            <version>${proof.version}</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>


    <artifactId>jacoco-report-aggregate</artifactId>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>report-aggregate</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>report-aggregate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.pitest</groupId>
                <artifactId>pitest-maven</artifactId>
                <version>${pitest.version}</version>
                <executions>
                    <execution>
                        <id>pit-report</id>
                        <phase>none</phase>
                    </execution>
                    <execution>
                        <id>put-it-together</id>
                        <phase>none</phase>
                        <goals>
                            <goal>report-aggregate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


</project>